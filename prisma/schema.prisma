generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite"
}


model Event {
  id            String   @id @default(cuid())
  title         String
  description   String
  date          String
  location      String
  capacity      Int
  registrations Int
  category      String
  active        Boolean
}